---
import config from "@/config/config.json";
import {
  IoLink,
  IoLogoFacebook,
  IoLogoLinkedin,
  IoLogoTwitter,
  IoLogoWhatsapp,
  IoLogoMicrosoft,
} from "react-icons/io5";
import CopyLinkScript from "./CopyLinkScript.tsx"

const { base_url } = config.site;
const { title, description, slug, className } = Astro.props;
---

<ul class={`${className}`}>
  <li class="inline-block mr-2">
    <a
      aria-label="facebook share button"
      href={`https://facebook.com/sharer/sharer.php?u=${base_url}/${slug}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoFacebook />
    </a>
  </li>
  <li class="inline-block mr-2">
    <a
      aria-label="twitter share button"
      href={`https://twitter.com/intent/tweet/?text=${title}&amp;url=${base_url}/${slug}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoTwitter />
    </a>
  </li>
  <li class="inline-block mr-2">
    <a
      aria-label="linkedin share button"
      href={`https://www.linkedin.com/shareArticle?mini=true&url=${base_url}/${slug}&title=${title}&summary=${description}&source=${base_url}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoLinkedin />
    </a>
  </li>
  <li class="inline-block mr-2">
    <a
      aria-label="whatsapp share button"
      href={`https://api.whatsapp.com/send?text=${encodeURIComponent(title + " " + base_url + "/" + slug)}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoWhatsapp />
    </a>
  </li>
  <li class="inline-block mr-2">
    <a
      aria-label="microsoft teams share button"
      href={`https://teams.microsoft.com/l/message/19:${base_url}/${slug}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoMicrosoft />
    </a>
  </li>
  <li class="inline-block mr-2">
    <button
      id="copyLinkButton"
      aria-label="copy link button"
      data-url={`${base_url}/${slug}`}
    >
      <IoLink />
    </button>
  </li>
</ul>
<CopyLinkScript client:load />

