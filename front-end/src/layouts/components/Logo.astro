---
import config from "@/config/config.json";
import { Image } from "astro:assets";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand block cursor:pointer">
  {
    // if src if provided, render as image
    // else if logo text is provided, render as text
    // else render website's title as logo as text
    src || logo ? (
      <Image
        width={logo_width.replace("px", "") * 2}
        height={logo_height.replace("px", "") * 2}
        src={src ? src : logo}
        alt={title}
        style={{
          height: logo_height.replace("px", "") + "px",
          width: logo_width.replace("px", "") + "px",
        }}
      />
    ) : (
      <label class="font-logo text-3xl mr-5 font-bold">
        {logo_text ? logo_text : title}
      </label>
    )
  }
</a>

<style>
  .font-logo {
    font-family: "Logo", cursive;
    cursor: pointer;
  }
</style>
